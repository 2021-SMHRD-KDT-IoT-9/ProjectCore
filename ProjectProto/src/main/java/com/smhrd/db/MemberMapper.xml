<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.db.MemberMapper">

   <insert id="join" parameterType="com.smhrd.model.MemberVO">
      insert into book_member values(#{id},#{pw},#{nick},#{email},#{tel})
   </insert>

   <select id="login" parameterType="com.smhrd.model.MemberVO"
      resultType="com.smhrd.model.MemberVO">
      select * from book_member where id=#{id} and pw=#{pw}
   </select>
   
   <insert id="tjoin" parameterType="com.smhrd.model.MemberVO">
      insert into t_member values(#{t_id},#{t_pw})
   </insert>
   
   <select id="tlogin" parameterType="com.smhrd.model.MemberVO"
      resultType="com.smhrd.model.MemberVO">
      select * from t_member where t_id=#{t_id} and t_pw=#{t_pw}
   </select>

</mapper>